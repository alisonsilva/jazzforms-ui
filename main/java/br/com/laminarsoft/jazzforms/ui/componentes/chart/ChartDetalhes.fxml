<GridPane xmlns:fx="http://javafx.com/fxml"
		  fx:controller="br.com.laminarsoft.jazzforms.ui.componentes.chart.ChartDetalhesController"
		  stylesheets="br/com/laminarsoft/jazzforms/ui/componentes/chart/ChartAvancado.css"
		  alignment="TOP_LEFT"
		  hgap="10" vgap="10" >
	<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
	
    <Label  text="Identificação:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField  GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="id"/>
	<Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
	<TextArea fx:id="descricao" prefHeight="100" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <Label text="itemId:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="itemId" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Tema:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <TextField fx:id="txtTema" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label text="Inset padding:" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="txtInsetPadding" GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <CheckBox fx:id="chkShadow" text="Sombra" GridPane.columnIndex="1" GridPane.rowIndex="5" /> 
    <CheckBox fx:id="chkAnimate" text="Animate" GridPane.columnIndex="1" GridPane.rowIndex="6" />
    <CheckBox fx:id="chkPolarChart" text="Polar chart" GridPane.columnIndex="1" GridPane.rowIndex="7" />  
    <CheckBox fx:id="chkScrollable" text="Scrollable" GridPane.columnIndex="1" GridPane.rowIndex="8" />
    <CheckBox fx:id="chkFlipXY" text="Flip XY" GridPane.columnIndex="1" GridPane.rowIndex="9" />
</GridPane>

