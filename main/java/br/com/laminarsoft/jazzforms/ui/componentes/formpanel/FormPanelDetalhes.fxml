<GridPane xmlns:fx="http://javafx.com/fxml"
		  fx:controller="br.com.laminarsoft.jazzforms.ui.componentes.formpanel.FormPanelDetalhesController"
		  stylesheets="br/com/laminarsoft/jazzforms/ui/componentes/formpanel/FormPanelAvancado.css"
		  alignment="TOP_LEFT"
		  hgap="10" vgap="10" >
	<padding><Insets top="25" right="25" bottom="10" left="25"/></padding>
	
    <Label  text="Identificação:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
    <TextField  GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="id"/>
	<Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
	<TextArea fx:id="descricao" prefHeight="100" prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <Label text="Método:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <ComboBox editable="false" fx:id="comboMetodo" GridPane.columnIndex="1" GridPane.rowIndex="3" />
    <Label  text="URL:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
    <TextField  GridPane.columnIndex="1" GridPane.rowIndex="4" fx:id="txtUrl"/>
    <CheckBox text="Scrollable" selected="true" fx:id="chkScrollable" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
    <CheckBox text="Submit on action" selected="true" fx:id="chkSubmitOnAction" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
    <CheckBox text="Track reset on load" selected="false" fx:id="chkTrackResetOnLoad" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
</GridPane>

